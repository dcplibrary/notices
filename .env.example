APP_NAME="DCPL Notifications"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://notifications.dcplibrary.org

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (your main Laravel database)
DB_CONNECTION=mysql
DB_HOST=your-mysql-host
DB_PORT=3306
DB_DATABASE=notifications
DB_USERNAME=your-db-user
DB_PASSWORD=your-db-password

# Polaris SQL Server Connection
# IMPORTANT: Use 'dblib' for Docker/Linux or 'sqlsrv' for Windows
POLARIS_DB_DRIVER=dblib
POLARIS_DB_HOST=your-polaris-server.local
POLARIS_DB_PORT=1433
POLARIS_DB_DATABASE=Polaris
POLARIS_DB_USERNAME=your-username
POLARIS_DB_PASSWORD=your-password
POLARIS_REPORTING_ORG_ID=3

# Shoutbomb FTP Settings (optional)
SHOUTBOMB_ENABLED=true
SHOUTBOMB_FTP_HOST=ftp.shoutbomb.com
SHOUTBOMB_FTP_PORT=21
SHOUTBOMB_FTP_USERNAME=your-ftp-username
SHOUTBOMB_FTP_PASSWORD=your-ftp-password
SHOUTBOMB_FTP_PASSIVE=true
SHOUTBOMB_FTP_SSL=false
SHOUTBOMB_FTP_TIMEOUT=30

# Shoutbomb FTP Paths
SHOUTBOMB_PATH_MONTHLY=/reports/monthly
SHOUTBOMB_PATH_WEEKLY=/reports/weekly
SHOUTBOMB_PATH_DAILY_INVALID=/reports/daily/invalid
SHOUTBOMB_PATH_DAILY_UNDELIVERED=/reports/daily/undelivered

# Email Report Settings (optional)
EMAIL_REPORTS_ENABLED=false
EMAIL_PROTOCOL=imap
EMAIL_HOST=imap.example.com
EMAIL_PORT=993
EMAIL_USERNAME=notifications@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_ENCRYPTION=ssl
EMAIL_MAILBOX=INBOX
EMAIL_FROM_ADDRESS=shoutbomb
EMAIL_MARK_AS_READ=true
EMAIL_MOVE_TO_FOLDER=
EMAIL_MAX_PER_RUN=50

# Cache & Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Dashboard Settings
NOTIFICATIONS_DASHBOARD_ENABLED=true
NOTIFICATIONS_DASHBOARD_PREFIX=notifications

# API Settings
NOTIFICATIONS_API_ENABLED=true
NOTIFICATIONS_API_PREFIX=api/notifications
NOTIFICATIONS_API_RATE_LIMIT=60
